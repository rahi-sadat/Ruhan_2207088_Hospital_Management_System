<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="450.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example._207088_hospital_management_system.ViewDoctorController">
    <children>
        <Label layoutX="14.0" layoutY="14.0" text="All Registered Doctors" AnchorPane.leftAnchor="15.0" AnchorPane.topAnchor="15.0">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Label>

        <TableView fx:id="doctorTable" layoutX="15.0" layoutY="55.0" prefHeight="320.0" prefWidth="570.0" AnchorPane.bottomAnchor="60.0" AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="55.0">
            <columns>
                <TableColumn fx:id="colId" prefWidth="40.0" text="ID" />
                <TableColumn fx:id="colName" prefWidth="120.0" text="Doctor Name" />
                <TableColumn fx:id="colSpecialization" prefWidth="100.0" text="Specialization" />
                <TableColumn fx:id="colPhone" prefWidth="100.0" text="Phone" />
                <TableColumn fx:id="colEmail" prefWidth="110.0" text="Email" />
                <TableColumn fx:id="colSchedule" prefWidth="100.0" text="Schedule" />
            </columns>
        </TableView>

        <Button fx:id="btnDelete" layoutX="15.0" layoutY="395.0" mnemonicParsing="false" onAction="#handleDeleteDoctor" prefHeight="30.0" prefWidth="150.0"  text="Delete Doctor" AnchorPane.bottomAnchor="15.0" AnchorPane.leftAnchor="15.0" />
    </children>
</AnchorPane>